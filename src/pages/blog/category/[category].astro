---
import { getCollection } from 'astro:content';
import BaseLayout from '../../../layouts/BaseLayout.astro';
import PostCard from '../../../components/PostCard.astro';
import { categoryConfig, type CategoryKey } from '../../../config/site';

export async function getStaticPaths() {
  const categories = Object.keys(categoryConfig) as CategoryKey[];
  return categories.map((category) => ({
    params: { category },
    props: { category },
  }));
}

interface Props {
  category: CategoryKey;
}

const { category } = Astro.props;
const config = categoryConfig[category];

const posts = (await getCollection('blog'))
  .filter((post) => !post.data.draft && post.data.category === category)
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

const categories = Object.keys(categoryConfig) as CategoryKey[];
---

<BaseLayout title={`${config.label} | Blog`} description={`Posts about ${config.label.toLowerCase()}`}>
  <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <header class="mb-12">
      <h1 class="text-4xl font-extrabold mb-4">{config.label}</h1>
      <p class="text-gray-600 text-lg">
        Exploring the {config.label.toLowerCase()} aspect of life in Croatia.
      </p>
    </header>

    <!-- Category Filter -->
    <div class="flex flex-wrap gap-3 mb-12">
      <a
        href="/blog"
        class="px-4 py-2 rounded-full text-sm font-bold transition-colors bg-border text-text hover:bg-primary/10"
      >
        All
      </a>
      {categories.map((cat) => (
        <a
          href={`/blog/category/${cat}`}
          class={`px-4 py-2 rounded-full text-sm font-bold transition-colors ${
            category === cat
              ? `${categoryConfig[cat].activeBgColor} text-white`
              : `${categoryConfig[cat].bgColor} ${categoryConfig[cat].textColor} hover:opacity-80`
          }`}
        >
          {categoryConfig[cat].label}
        </a>
      ))}
    </div>

    <!-- Posts Grid -->
    {posts.length > 0 ? (
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        {posts.map((post) => (
          <PostCard post={post} />
        ))}
      </div>
    ) : (
      <div class="text-center py-20">
        <p class="text-gray-500 text-lg">No posts found in this category yet.</p>
        <a href="/blog" class="text-primary font-bold mt-4 inline-block hover:underline">
          View all posts â†’
        </a>
      </div>
    )}
  </main>
</BaseLayout>
