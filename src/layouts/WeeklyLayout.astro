---
import type { CollectionEntry } from 'astro:content';
import { Image } from 'astro:assets';
import BaseLayout from './BaseLayout.astro';
import { siteConfig, regionConfig, type RegionKey } from '../config/site';
import { ChevronRight, MapPin, Calendar } from 'lucide-astro';
import { authorAvatar } from '../images';

type Props = CollectionEntry<'weekly'>['data'] & {
  slug: string;
};

const {
  title,
  description,
  weekStart,
  weekEnd,
  pubDate,
  heroImage,
  caption,
  location,
  region,
  slug,
} = Astro.props;

// Format the week date range
const formatDate = (date: Date) => date.toLocaleDateString('en-US', { month: 'short', day: 'numeric' });
const weekRange = `${formatDate(weekStart)} - ${formatDate(weekEnd)}, ${weekStart.getFullYear()}`;

// Calculate reading time
const wordCount = Astro.slots.has('default') ? 1000 : 500;
const readingTime = Math.max(1, Math.ceil(wordCount / 200));

const regionDescription = regionConfig[region as RegionKey];
---

<BaseLayout title={title} description={description} heroImage={heroImage}>
  <main class="flex-1 max-w-7xl mx-auto w-full px-4 py-8 md:py-12">
    {/* Breadcrumbs */}
    <nav class="flex flex-wrap items-center gap-2 mb-8">
      <a href="/" class="text-text-muted text-sm font-medium hover:text-primary">Home</a>
      <ChevronRight class="w-4 h-4 text-text-muted" />
      <a href="/weekly" class="text-text-muted text-sm font-medium hover:text-primary">Weekly</a>
      <ChevronRight class="w-4 h-4 text-text-muted" />
      <span class="text-text text-sm font-bold truncate max-w-[200px]">{title}</span>
    </nav>

    {/* Post Header */}
    <header class="mb-10">
      <div class="flex items-center gap-2 mb-6">
        <div class="flex items-center gap-2 px-3 py-1 bg-primary/10 text-primary rounded-full">
          <Calendar class="w-4 h-4" />
          <span class="text-xs font-bold uppercase tracking-wider">{weekRange}</span>
        </div>
        <span class="text-text-muted text-sm">â€¢ {readingTime} min read</span>
      </div>
      <h1 class="text-4xl md:text-6xl font-serif font-black leading-tight tracking-tight mb-6">
        {title}
      </h1>
      <div class="flex items-center gap-4">
        <div class="w-12 h-12 rounded-full overflow-hidden border-2 border-primary bg-gray-200">
          <Image
            src={authorAvatar}
            alt={siteConfig.author.name}
            width={48}
            height={48}
            class="w-full h-full object-cover"
          />
        </div>
        <div>
          <p class="font-bold">{siteConfig.author.name}</p>
          <p class="text-text-muted text-sm">
            Published on {pubDate.toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' })}
          </p>
        </div>
      </div>
    </header>

    {/* Hero Image */}
    {heroImage && (
      <div class="mb-16">
        <div class="relative group">
          <div class="w-full rounded-xl overflow-hidden shadow-2xl">
            {typeof heroImage === 'string' ? (
              <img
                src={heroImage}
                alt={title}
                class="w-full h-auto min-h-[300px] max-h-[500px] object-cover"
              />
            ) : (
              <Image
                src={heroImage}
                alt={title}
                class="w-full h-auto min-h-[300px] max-h-[500px] object-cover"
                widths={[400, 800, 1200]}
                sizes="(max-width: 768px) 100vw, 1200px"
              />
            )}
          </div>
          {caption && (
            <div class="absolute -bottom-6 -right-2 md:right-8 bg-white p-4 shadow-xl rounded-lg border-l-4 border-primary max-w-xs rotate-2">
              <p class="handwritten text-sm">{caption}</p>
            </div>
          )}
        </div>
      </div>
    )}

    <div class="flex flex-col lg:flex-row gap-12">
      {/* Content */}
      <article class="flex-1 max-w-3xl">
        <div class="prose prose-lg max-w-none">
          <slot />
        </div>
      </article>

      {/* Sidebar - Location only */}
      <aside class="w-full lg:w-80 space-y-8">
        {/* Location Widget */}
        <div class="bg-teal text-white p-6 rounded-2xl shadow-lg relative overflow-hidden">
          <div class="relative z-10">
            <h5 class="font-extrabold text-xs uppercase tracking-widest text-white/70 mb-4">
              Location
            </h5>
            <p class="text-2xl font-serif font-bold">{location}, Croatia</p>
            <p class="text-sm text-white/80 mt-1">{regionDescription}</p>
            <div class="mt-6 flex items-center gap-2">
              <MapPin class="w-4 h-4" />
              <span class="text-xs font-bold">Local events & happenings</span>
            </div>
          </div>
          <MapPin class="absolute -right-4 -bottom-4 w-32 h-32 text-white/10 rotate-12" />
        </div>

        {/* Week Info */}
        <div class="bg-white p-6 rounded-2xl shadow-sm border border-border">
          <h5 class="font-extrabold text-xs uppercase tracking-widest text-gray-400 mb-4">
            This Week
          </h5>
          <div class="flex items-center gap-3">
            <div class="w-12 h-12 rounded-full bg-primary/10 flex items-center justify-center text-primary">
              <Calendar class="w-6 h-6" />
            </div>
            <div>
              <p class="font-bold">{weekRange}</p>
              <p class="text-sm text-gray-500">Weekly roundup</p>
            </div>
          </div>
        </div>
      </aside>
    </div>
  </main>
</BaseLayout>
