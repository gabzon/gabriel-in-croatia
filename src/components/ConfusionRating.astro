---
import { Star } from 'lucide-astro';

interface Props {
  level: number; // 1-5
  showLabel?: boolean;
  size?: 'sm' | 'md';
}

const { level, showLabel = false, size = 'sm' } = Astro.props;
const stars = Array.from({ length: 5 }, (_, i) => i < level);
const sizeClasses = size === 'sm' ? 'w-3 h-3' : 'w-4 h-4';
---

<div class="flex items-center gap-1">
  {showLabel && (
    <span class="text-xs font-bold text-gray-400 mr-1">Confusion:</span>
  )}
  <div class="flex text-primary">
    {stars.map((filled) => (
      <Star
        class={`${sizeClasses} ${filled ? 'fill-primary' : 'fill-none'}`}
      />
    ))}
  </div>
</div>
