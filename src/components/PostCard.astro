---
import type { CollectionEntry } from 'astro:content';
import CategoryBadge from './CategoryBadge.astro';
import ConfusionRating from './ConfusionRating.astro';

interface Props {
  post: CollectionEntry<'blog'>;
  featured?: boolean;
}

const { post, featured = false } = Astro.props;
const { title, description, pubDate, heroImage, category, confusionLevel } = post.data;

// Calculate reading time (rough estimate: 200 words per minute)
const content = post.body || '';
const wordCount = content.split(/\s+/).length;
const readingTime = Math.max(1, Math.ceil(wordCount / 200));
---

{featured ? (
  <!-- Featured post card -->
  <article class="group relative bg-white rounded-3xl overflow-hidden shadow-sm hover:shadow-2xl transition-all duration-500 border border-border">
    <div class="grid md:grid-cols-2">
      {heroImage && (
        <div class="relative overflow-hidden h-64 md:h-auto">
          <img
            src={heroImage}
            alt={title}
            class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-700"
          />
          <div class="absolute top-4 left-4 bg-primary text-white px-3 py-1 rounded-lg text-xs font-bold uppercase tracking-tighter">
            New
          </div>
        </div>
      )}
      <div class="p-8 md:p-12 flex flex-col justify-center">
        <h3 class="text-3xl font-extrabold mb-4 group-hover:text-primary transition-colors">
          <a href={`/blog/${post.slug}`}>{title}</a>
        </h3>
        <p class="text-gray-600 mb-6 leading-relaxed">{description}</p>
        <a
          href={`/blog/${post.slug}`}
          class="w-fit bg-primary hover:bg-primary-hover text-white px-6 py-3 rounded-xl font-bold flex items-center gap-2 transition-colors"
        >
          Read the Chaos
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
        </a>
      </div>
    </div>
  </article>
) : (
  <!-- Regular post card -->
  <article class="group bg-white rounded-2xl p-4 shadow-sm border border-border hover:shadow-lg transition-all">
    {heroImage && (
      <a href={`/blog/${post.slug}`}>
        <img
          src={heroImage}
          alt={title}
          class="w-full h-48 object-cover rounded-xl mb-4"
        />
      </a>
    )}
    <div class="flex items-center gap-2 mb-2">
      <CategoryBadge category={category} />
      <div class="flex-1"></div>
      <ConfusionRating level={confusionLevel} showLabel />
    </div>
    <h3 class="text-xl font-bold group-hover:text-primary transition-colors mb-2">
      <a href={`/blog/${post.slug}`}>{title}</a>
    </h3>
    <p class="text-gray-600 text-sm mb-3 line-clamp-2">{description}</p>
    <div class="flex items-center gap-2 text-xs text-gray-400">
      <time datetime={pubDate.toISOString()}>
        {pubDate.toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' })}
      </time>
      <span>â€¢</span>
      <span>{readingTime} min read</span>
    </div>
  </article>
)}
