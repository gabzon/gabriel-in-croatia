---
/**
 * FAQPage Schema Component
 *
 * Usage:
 * <FaqSchema faqs={[
 *   { question: "What is pomalo?", answer: "It means 'take it easy' in Croatian." },
 *   { question: "Is Croatia expensive?", answer: "It depends on the season and location." }
 * ]} />
 */

interface FaqItem {
  question: string;
  answer: string;
}

interface Props {
  faqs: FaqItem[];
}

const { faqs } = Astro.props;

const faqSchema = {
  '@context': 'https://schema.org',
  '@type': 'FAQPage',
  mainEntity: faqs.map((faq) => ({
    '@type': 'Question',
    name: faq.question,
    acceptedAnswer: {
      '@type': 'Answer',
      text: faq.answer,
    },
  })),
};
---

<script type="application/ld+json" set:html={JSON.stringify(faqSchema)} />
